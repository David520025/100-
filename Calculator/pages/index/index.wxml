<view class="content">

  <view class="layout-top">
    <view class="screen">
     {{screenData}}
    </view>
  </view>
    
  <view class="layout-bottom" bindtap = "test">
  
    <view class="btnGroup">
      <view class="item orange" data-id="C">С</view>
      <view class="item orange" data-id="←">←</view>
      <view class="item orange iconBtn" data-id="icon"> </view>
      <view class="item orange"  data-id="+">+</view>
    </view>

    <view class="btnGroup">
      <view class="item blue" data-id="9">9</view>
      <view class="item blue" data-id="8">8</view>
      <view class="item blue" data-id="7">7</view>
      <view class="item orange"  data-id="-">-</view>
    </view>
    <view class="btnGroup">
      <view class="item blue"  data-id="6">6</view>
      <view class="item blue"  data-id="5">5</view>
      <view class="item blue"  data-id="4">4</view>
      <view class="item orange"  data-id="×">×</view>
    </view>

    <view class="btnGroup">
      <view class="item blue"  data-id="3">3</view>
      <view class="item blue"  data-id="2">2</view>
      <view class="item blue"  data-id="1">1</view>
      <view class="item orange"  data-id="÷">÷</view>
    </view>

    <view class="btnGroup">
      <view class="item blue zero" data-id="0">0</view>
      <view class="item blue"  data-id=".">.</view>
      <view class="item orange"  data-id="=">=</view>
    </view> 

  </view>

  
</view>